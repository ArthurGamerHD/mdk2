<views:DialogWindow xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Mdk.Hub.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Mdk.Hub.Views.MessageBoxWindow"
        SizeToContent="WidthAndHeight"
        Title="DialogWindow">
    <StackPanel Spacing="16">
        <TextBlock HorizontalAlignment="Stretch" Classes="h1" Text="Shut Down?" TextAlignment="Center" />
        <TextBlock HorizontalAlignment="Stretch" Classes="body"
                   Text="Are you sure you want to shut down the application?"
                   TextAlignment="Center"
                   TextWrapping="Wrap" />
    </StackPanel>
</views:DialogWindow>
